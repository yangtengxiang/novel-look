{
	"name": "novel-look",
	"displayName": "novel-look",
	"description": "高性能,支持高度自定义操作的看(mo)书(yu)插件",
	"keywords": [
		"novel",
		"摸鱼",
		"txt"
	],
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"publisher": "ytx",
	"categories": [
		"Other"
	],
	"icon": "./src/img/fish.png",
	"activationEvents": [
		"激活事件",
		"onView:novel-look-book",
		"onCommand:novel-look.helloWorld",
		"onCommand:novel-look.test"
	],
	"main": "./src/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "vscode-novel",
				"extensions": [
					".vscode-novel"
				],
				"aliases": [
					"小说文件",
					"\"configuration\": \"./src/json/language-configuration.json\""
				]
			}
		],
		"grammars": [
			{
				"language": "vscode-novel",
				"scopeName": "source.vscode-novel",
				"path": "./syntaxes/vscode-novel.tmGrammar.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "novel-look",
			"properties": {
				"vscodePluginDemo.yourName": {
					"type": "string",
					"default": "guest",
					"description": "你的名字"
				},
				"vscodePluginDemo.showTip": {
					"type": "boolean",
					"default": true,
					"description": "是否在每次启动时显示欢迎提示！"
				}
			}
		},
		"commands": [
			{
				"command": "novel-look.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "novel-look.test",
				"title": "test"
			},
			{
				"command": "novel-look.refreshFile",
				"icon": "./src/img/refresh.svg",
				"enablement": "\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\",
				"title": "刷新"
			},
			{
				"command": "novel-look.show",
				"icon": "./src/img/refresh.svg",
				"title": "显示已读章节"
			},
			{
				"command": "novel-look.refreshFile",
				"icon": "./src/img/refresh.svg",
				"title": "清空已读章节"
			},
			{
				"command": "novel-look.refreshFile",
				"icon": "./src/img/refresh.svg",
				"title": "删除"
			},
			{
				"command": "novel-look.openExplorer",
				"icon": "./src/img/add.svg",
				"title": "添加"
			},
			{
				"command": "novel-look.showChapter",
				"title": "打开本章"
			},
			{
				"command": "novel-look.closeWebView",
				"title": "关闭窗口"
			},
			{
				"command": "novel-look.openWebView",
				"title": "打开窗口"
			}
		],
		"keybindings": [
			{
				"command": "novel-look.closeWebView",
				"key": "alt+d",
				"mac": "alt+d"
				
			},
			{
				"command": "novel-look.openWebView",
				"key": "alt+s",
				"mac": "alt+s"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorFocus",
					"command": "novel-look.test",
					"group": "navigation@6"
				},
				{
					"when": "editorFocus && resourceLangId == javascript",
					"command": "novel-look.test",
					"group": "z_commands"
				}
			],
			"editor/title": [
				{
					"when": "editorFocus && resourceLangId == javascript",
					"command": "novel-look.test",
					"group": "navigation"
				}
			],
			"editor/title/context": [
				{
					"when": "resourceLangId == javascript",
					"command": "novel-look.test",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"command": "novel-look.test",
					"group": "navigation"
				}
			],
			"view/title": [
				{
					"command": "novel-look.refreshFile",
					"group": "navigation"
				},
				{
					"command": "novel-look.openExplorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "novel-look.refreshFile"
				},
				{
					"command": "novel-look.showChapter",
					"when": "viewItem == Book"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "novel-look",
					"title": "看(mo)书(yu)",
					"icon": "./src/img/fish.svg"
				}
			]
		},
		"views": {
			"novel-look": [
				{
					"id": "novel-look-book",
					"name": "我的书",
					"contextualTitle": "我的书11"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "novel-look-book",
				"contents": "您还没有电子书,请到指定目录添加电子书\n[打开目录](command:novel-look.openUri)"
			}
		]
	},
	"license": "SEE LICENSE IN LICENSE.txt",
	"bugs": {
		"url": "https://github.com/sxei/vscode-plugin-demo/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/sxei/vscode-plugin-demo"
	},
	"homepage": "https://github.com/sxei/vscode-plugin-demo/blob/master/README.md",
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
