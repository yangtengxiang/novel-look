{
	"scopeName": "source.vscode-novel",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#symbols"
		},
		{
			"include": "#expression"
		},
		{
			"include": "#comment-blocks"
		},
		{
			"include": "#comment-lines"
		}
	],
	"repository": {
		"expression": {
			"patterns": [
				{
					"include": "#letter"
				},
				{
					"include": "#paren-expression"
				}
			]
		},
		"letter": {
			"match": "a|b|c",
			"name": "keyword.letter"
		},
		"paren-expression": {
			"begin": "\\(",
			"end": "\\)",
			"beginCaptures": {
				"0": {
					"name": "punctuation.paren.open"
				}
			},
			"endCaptures": {
				"0": {
					"name": "punctuation.paren.close"
				}
			},
			"name": "expression.group",
			"patterns": [
				{
					"include": "#expression"
				}
			]
		},
		"comment-lines": {
			"name": "keyword.control",
			"begin": "<",
			"end": ">",
			"patterns": [
				{
					"name": "constant.character",
					"match": "\\\\."
				}
			]
		},
		"comment-blocks": {
			"name": "storage.type",
			"begin": "\t\t|\t",
			"end": "end|;",
			"patterns": [
				{
					"name": "constant.character",
					"match": "\\\\."
				}
			]
		}
	}
}
